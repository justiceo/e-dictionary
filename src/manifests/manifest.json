{
  "name": "Chrome Extension Starter",
  "description": "Chrome extension starter kit (boilerplate) with Typescript, Gulp and E2E tests",
  "homepage_url": "https://github.com/justiceo/xtension",
  "version": "22.04.03",
  "manifest_version": 3,
  "permissions": ["contextMenus", "storage", "management"],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_icon": {
      "16": "images/icon-16x16.png",
      "24": "images/icon-24x24.png",
      "32": "images/icon-32x32.png"
    },
    "default_title": "Chrome Extension Starter",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "all_frames": true,
    "js": ["content-script.js"],
    "css": ["content-script.css"]
  }],
  "icons": {
    "16": "images/icon-16x16.png",
    "32": "images/icon-32x32.png",
    "48": "images/icon-48x48.png",
    "128": "images/icon-128x128.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}